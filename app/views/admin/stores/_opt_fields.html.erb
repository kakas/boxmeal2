<div class="nested-fields">

    <div class="form-group">

      <div class="group col-md-4 col-md-offset-8">
        <div class="input-group input-group-sm" style="padding-bottom:2px;">
          <span class="input-group-addon"> 選項 </span>
          <%= f.text_field :content, class: 'form-control' %>

          <span class="input-group-addon"> 加價 </span>
          <%= f.text_field :price, class: 'form-control' %>

          <span class="input-group-btn">
            <%= link_to_remove_association f, class: "btn btn-default" do %>
              <i class="fa fa-long-arrow-right"></i>
              <i class="fa fa-trash"></i>
            <% end %>
          </span>
        </div>
      </div>


  </div>
</div>
