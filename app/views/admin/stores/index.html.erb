<% @page_title = "店家列表" %>

<h2>店家列表</h2>
<%= link_to "新增店家", new_admin_store_path, class: "btn btn-default btn-xs pull-right" %>
<table class="table table-hover">
  <thead>
    <tr>
      <th>店名</th>
      <th>電話</th>
      <th>住址</th>
      <th>功能</th>
    </tr>
  </thead>
  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= store.name %></td>
        <td><%= store.phone %></td>
        <td><%= store.address %></td>
        <td>
          <%= link_to "編輯店家", edit_admin_store_path(store), class: "btn btn-default btn-xs" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
