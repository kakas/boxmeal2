<% @page_title = "我的訂單列表" %>

<% @orders.each do |order| %>

  <% if order.groupon.times_up? %>
    <% @panel_class = "panel panel-default" %>
    <% @btn_class = "btn btn-danger" %>
    <% @btn_text = ">> 已截止" %>
  <% else %>
    <% @panel_class = "panel panel-info" %>
    <% @btn_class = "btn btn-info" %>
    <% @btn_text = ">> 還有#{order.groupon.countdown}分鐘" %>
  <% end %>

  <div class="col-md-8 col-md-offset-2">
    <div class="row">
      <%= content_tag :div, class: @panel_class do %>
        <div class="panel-heading">
          <%= link_to @btn_text, order_path(order.token), class: @btn_class %>

          <div class="pull-right">
            <%= order.groupon.store.name %>, 團長：<%= order.groupon.hosts.first.name %>
          </div>
        </div>

        <table class="table table-hover">
          <thead>
            <tr>
              <th>品名</th>
              <th>單價</th>
              <th>數量</th>
            </tr>
          </thead>
          <tbody>
            <% order.order_items.each do |order_item| %>
              <tr>
                <td><%= order_item.product.title %></td>
                <td><%= order_item.product.price %></td>
                <td><%= order_item.quantity %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <div class="panel-footer">
          <div class="text-right">
            <% if order.is_paid? %>
              <span class="label label-info">已付款</span>
            <% else %>
              <span class="label label-warning">未付款</span>
            <% end %>
            總計：<%= order.price %> 元
          </div>
        </div>
      <% end %>
    </div>
  </div>

<% end %>
